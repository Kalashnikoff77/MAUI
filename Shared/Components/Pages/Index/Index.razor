@page "/"

<PageTitle>Главная страница</PageTitle>

@if (Accounts != null)
{
    <MudGrid>
        @foreach (var account in Accounts)
        {
        <MudItem xs="12" sm="6" lg="4">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <GenderCircleComponent account="account" />
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@account.Name</MudText>
                        <MudText Typo="Typo.body2" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@account.ToRegionString()</MudText>
                    </CardHeaderContent>
                    <CardHeaderActions>
                        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                    </CardHeaderActions>
                </MudCardHeader>
                <MudImage Fluid="true" Src="@account.ToAvatarUri(EnumImageSize.s250x250)" />
                <MudCardContent>
                    <MudText Typo="Typo.body2">Хоккей, футбол</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" />
                </MudCardActions>
            </MudCard>
        </MudItem>
        }
    </MudGrid>
}

