@page "/"

<PageTitle>Главная страница</PageTitle>

<div style="max-width:300px; height:50px">
    <MudText Typo="Typo.h6" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis">
        Привет! Как дела? Что ты сейчас делаешь? Как планируешь жить дальше?
    </MudText>
</div>


@if (Accounts != null)
{
    <MudGrid>
        @foreach (var account in Accounts)
        {
        <MudItem xs="12" sm="6" lg="4">

            <div class="mud-paper mud-elevation-1 mud-card">
                <div class="d-flex" style="padding:16px; flex-grow:1; flex-shrink:1; flex-basis:auto">
                    <div class="mud-card-header-avatar">
                        <GenderCircleComponent account="account" />
                    </div>
                    <div class="d-flex flex-column" style="white-space:nowrap; overflow:hidden; text-overflow:ellipsis">
                        <h6 class="mud-typography mud-typography-h6" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis">Елена Крым Симферополь Па</h6>
                        <p class="mud-typography mud-typography-body2" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis">Беларусь, Минск и область</p>
                    </div>
                    <div class="mud-card-header-actions">
                        <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
                    </div>
                </div>
                <MudImage Fluid="true" Src="@account.ToAvatarUri(EnumImageSize.s250x250)" />
                <div class="mud-card-content">
                    <p class="mud-typography mud-typography-body2">Хоккей, футбол</p>
                </div>
                <div class="mud-card-actions">
                    <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" />
                </div>
            </div>

