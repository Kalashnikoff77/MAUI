<div class="d-flex align-center">
    @if (Message.Type != EnumMessages.Message) 
    {
        <MudIcon Icon="@Icons.Material.Filled.NotificationsActive" Color="Color.Inherit" Style="font-size:18px; color:#59a2c2; margin: 0 8px 2px 1px" />
    }
    
    <span>
        @htmlText
    
        @if (!string.IsNullOrWhiteSpace(Message.Text) && Message.Text.Length > MaxTextLength)
        {
            <span @onclick="OnWrap" @onclick:stopPropagation="true" class="mud-primary-text" style="font-size:14px; font-weight:500; cursor:pointer">
                @(isShortText ? " далее »" : " « скрыть")
            </span>
        }
        else 
        {
            if (Message.Recipient?.Id == CurrentState.Account?.Id && Message.ReadDate == null)
            {
                <MudIconButton OnClick="OnWrap" Icon="@Icons.Material.Outlined.DoneAll" Size="Size.Small" Color="Color.Primary" Variant="Variant.Text" Class="ml-3" title="Пометить как прочитанное" />
            }
        }

    </span>
</div>