<MudNavMenu Color="Color.Info" Bordered="true">
    <MudNavLink Href="/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Главная</MudNavLink>
    <MudNavLink Href="/events" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Groups3">Клубы и мероприятия</MudNavLink>
    <MudNavLink Href="/private" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Group">Частные встречи</MudNavLink>
    @if (CurrentState.Account == null)
    {
        <MudNavLink Href="/login" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Login">Войти</MudNavLink>
    }
    else
    {
        <MudNavLink Href="/messages" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Message">
            <div class="d-flex justify-space-between">
                <p>Общение</p>
                <p id="NumberOfMessages" style="color:orangered; display:none"></p>
            </div>
        </MudNavLink>

        <MudNavLink Href="/notifications" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Notifications">
            <div class="d-flex justify-space-between">
                <p>Уведомления</p>
                <p id="NumberOfNotifications" style="color:orangered; font-weight:bold; display:none"></p>
            </div>
        </MudNavLink>

        <MudNavLink OnClick="async() => { await CurrentState.LogOutAsync(); }" Match="NavLinkMatch.Prefix" Icon="@Icons.Material.Filled.Logout">Выйти</MudNavLink>
    }
</MudNavMenu>
